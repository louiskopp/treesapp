<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <android.support.v7.widget.CardView
        android:id="@+id/item_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="?attr/colorPrimary"

            >

            <ImageView
                android:id="@+id/item_card_view_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                />

            <TextView
                android:id="@+id/item_card_view_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/item_card_view_icon"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/boxTextColor"
                android:text="This is the title"
                />

            <TextView
                android:id="@+id/item_card_view_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/item_card_view_icon"
                android:layout_below="@+id/item_card_view_name"
                android:textSize="16sp"
                android:textColor="@color/boxTextColor"
                android:text="this is the description"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
